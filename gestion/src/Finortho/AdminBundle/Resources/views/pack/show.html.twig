{% extends 'FinorthoAdminBundle:Interface:index.html.twig' %}

{% block title %}
    Catégorie {{ entity.name }}
{% endblock %}

{% block content -%}
    <div class="container">
        <h4>{{entity.name }}</h4>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            </tbody>
        </table>

        <h4>Contient les packs :</h4>
        <div class="row">
            {% for item in entity.items %}
                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail">
                        <div class="caption">
                            <h3 style="color: black;">{{ item.name }}</h3>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>


        <div id="actions" class="">
                <a href="{{ path('pack') }}">
                    <button class="btn cancel">
                        Retout à la liste
                    </button>

                </a>
                <a href="{{ path('pack_edit', { 'id': entity.id }) }}">
                    <button class="btn cancel">
                        Éditer
                    </button>
                </a>
            {{ form(delete_form) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}

    <script type="text/javascript" src="{{ asset('js/button_effect.js') }}"></script>
    <script type="text/javascript" src="{{ asset('node_modules/jquery/dist/jquery.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('node_modules/bootstrap/dist/js/bootstrap.min.js') }}"></script>
{% endblock %}