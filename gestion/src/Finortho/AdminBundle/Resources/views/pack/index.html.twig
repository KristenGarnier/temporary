{% extends 'FinorthoAdminBundle:Interface:index.html.twig' %}

{% block title %}
    Vos catégories de packs
{% endblock %}

{% block content -%}
    <h4>Toutes vos catégories disponible :</h4>

    <table class="table">
        <thead>
        <tr class="row">
            <th class="col-md-3">Id</th>
            <th class="col-md-3">Nom</th>
            <th class="col-md-6">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr class="row">
                <td class="col-md-3"><a href="{{ path('pack_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td class="col-md-3">{{ entity.name }}</td>
                <td class="col-md-6">
                    <a href="{{ path('pack_show', { 'id': entity.id }) }}">
                        <button class="btn fileinput-button">
                            Voir
                        </button>
                    </a>

                    <a href="{{ path('pack_edit', { 'id': entity.id }) }}">
                        <button class="btn cancel">
                            Mettre à jour
                        </button>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div id="actions">

        <a href="{{ path('pack_new') }}">
            <button class="btn start">
                Ajouter un nouveau pack
            </button>
        </a>

    </div>
{% endblock %}

