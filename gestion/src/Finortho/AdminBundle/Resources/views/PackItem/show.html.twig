{% extends 'FinorthoAdminBundle:Interface:index.html.twig' %}

{% block title %}
    Pack {{ entity.name }}
{% endblock %}

{% block content -%}
    <h4>Pack {{ entity.name }}</h4>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        </tbody>
    </table>
    {% if entity.pack is defined %}
        <h4>Fais parti de la catégorie de pack : <strong>{{ entity.pack.name }}</strong></h4>
    {% else %}
        <h4>Pas de catégorie de pack attaché.</h4>
    {% endif %}

    <h4>Contient les propriétés :</h4>
    <div class="row">
        {% for item in entity.property %}
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <div class="caption">
                        <h3 style="color: black;">{{ item.name }}</h3>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>




    <div id="actions" class="">
        <a href="{{ path('packitem') }}">
            <button class="btn cancel">
                Retout à la liste
            </button>

        </a>
        <a href="{{ path('packitem_edit', { 'id': entity.id }) }}">
            <button class="btn cancel">
                Éditer
            </button>
        </a>
        {{ form(delete_form) }}
    </div>
{% endblock %}