{% extends 'FinorthoAdminBundle:Interface:index.html.twig' %}

{% block title %}
    Pack {{ entity.name }}
{% endblock %}

{% block content -%}
    <h4>Pack {{ entity.name }}</h4>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        </tbody>
    </table>

    <div id="actions" class="">
        <a href="{{ path('packitem') }}">
            <button class="btn cancel">
                Retout à la liste
            </button>

        </a>
        <a href="{{ path('packitem_edit', { 'id': entity.id }) }}">
            <button class="btn cancel">
                Éditer
            </button>
        </a>
        {{ form(delete_form) }}
    </div>
{% endblock %}