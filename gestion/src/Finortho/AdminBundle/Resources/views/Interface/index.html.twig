{% extends 'admin.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <link rel="stylesheet" href="{{ asset('css/default.css') }}">
    <link rel="stylesheet" href="http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
{% endblock %}

{% block pagetitle %}
    Package disponibles
{% endblock %}

{% block menu %}
    <a class="pull-right navi" href="{{ path('fos_user_security_logout') }}">Se déconnecter <i
                class="icon ion-log-out"></i></a>
    <a class="pull-right navi" href="{{ path('finortho_admin_new_user') }}">Ajouter un utilisateur</a>
    <a class="pull-right navi" href="{{ path('finortho_admin_list_users') }}">Utilisateurs</a>
    <a class="pull-right navi" href="{{ path('finortho_admin_exigences') }}">Packs</a>
{% endblock %}

{% block body %}
    <div class="container">
        <div id="actions" class="row">
            <div class="col-md-4 text-center">
                <a href="{{ path('pack') }}" class="text-center">
                    <button class="btn start">Les catégories de packs</button>
                </a>
            </div>
            <div class="col-md-4 text-center">
                <a href="{{ path('packitem') }}" class="text-center">
                    <button class="btn start">Les packs</button>
                </a>
            </div>
            <div class="col-md-4 text-center">
                <a href="{{ path('packproperty') }}" class="text-center">
                    <button class="btn start">Les exigences</button>
                </a>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}

    <script type="text/javascript" src="{{ asset('js/button_effect.js') }}"></script>
    <script type="text/javascript" src="{{ asset('node_modules/jquery/dist/jquery.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('node_modules/bootstrap/dist/js/bootstrap.min.js') }}"></script>
{% endblock %}