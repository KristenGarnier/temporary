{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <h3>Renseignez l'axe vertical dans la machine</h3>
        {% for flashMessage in app.session.flashbag.get('error') %}

            <div class="alert alert-danger">
                {{ flashMessage }}
            </div>

        {% endfor %}

        <form method="post" {{ form_enctype(form) }}>
            {{ form_errors(form) }}
            {{ form_widget(form) }}
            {{ form_rest(form) }}

            <button type="submit" class="btn btn-primary">
                Confirmer l'axe
            </button>
        </form>

    </div>


{% endblock %}
